extends layout

block content
  .card.center
    h1 #{title}

    if locals.flashes
      - const categories = Object.keys(locals.flashes)
      each category in categories
        each message in flashes[category]
          .staticFlash(class=`staticFlash--${category}`).center.m-v-lg.p-h-md.p-v-sm
            | #{message}

    form(action='/forgot-password' method='post' autocomplete='off')
      .m-v-sm
        input(
          type='email' name='email' required='' 
          maxlength='255' autofocus='' placeholder='Email'
          value=`${(body && body.email) ? body.email : ''}`
          ).input-border.p-sm
      .m-v-md
        input(type='submit' value='Submit').button.button-primary
