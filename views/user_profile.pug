extends layout

block content
  .card
    .flex.flex-center.m-v-md
      h2.aubergine #{userInfo.username}'s Profile
    hr

    .flex.flex-center.m-v-md
      if userInfo.avatar
        img(src=`${userInfo.avatar}` alt=`${userInfo.username}'s avatar` class="avatar avatar-big")
      div.p-l-sm
        p.no-margin
          strong Username: 
          |#{userInfo.username}
        p.no-margin
          strong Role: 
          |#{userInfo.roleFormatted}
        p.no-margin
          strong Email: 
          a(href=`mailto:${userInfo.email}`) #{userInfo.email}
        p.no-margin
          strong Website: 
          a(href=`${userInfo.website}`) #{userInfo.website}
        p.no-margin
          strong Joined on: 
          |#{userInfo.createdAtFormatted}

